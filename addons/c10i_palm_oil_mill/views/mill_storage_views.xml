<?xml version="1.0" encoding="utf-8"?>
<odoo>
	<data>
		<record id="view_mill_storage_form" model="ir.ui.view">
			<field name="name">view.mill.storage.form</field>
			<field name="model">mill.storage</field>
            <field name="arch" type="xml">
				<form string="Storage">
					<sheet>
						<div class="oe_button_box" name="button_box">
                            <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                                <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                            </button>
                        </div>
                        <div class="oe_title">
                            <label string="Nama" class="oe_edit_only"/>
                            <h1><field name="name" placeholder="" required="1"/></h1>
                        </div>
						<group name="storage_information">
                            <group string="Storage Information">
								<field name="parent_id" required="1"/>
                                <field name="code" required="1"/>
								<field name="product_id" required="1"/>
								<field name="height" required="1"/>
                                <field name="location_type_id" required="1" options="{'no_create_edit':True, 'no_create':True, 'no_open':True}"/>
                            </group>
                            <group string="Lokasi &amp; Tanggal">
                                <field name="location_id" readonly="1" options="{'no_create_edit':True, 'no_create':True, 'no_open':True}"/>
                                <field name="company_id" readonly="1" options="{'no_create_edit':True, 'no_create':True, 'no_open':True}"/>
                            </group>
                        </group>
					</sheet>
				</form>
			</field>
		</record>
		
		<record id="view_mill_storage_tree" model="ir.ui.view">
            <field name="name">view.mill.storage.tree</field>
            <field name="model">mill.storage</field>
            <field name="arch" type="xml">
                <tree string="Storage">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="product_id"/>
                    <field name="location_type_id"/>
                    <field name="location_id"/>
                    <field name="active" invisible="1"/>
                    <field name="company_id" invisible="1"/>
                </tree>
            </field>
        </record>
		
		<record id="view_mill_storage_filter" model="ir.ui.view">
            <field name="name">view.mill.storage.filter</field>
            <field name="model">mill.storage</field>
            <field name="arch" type="xml">
                <search string="Storage">
                    <field name="name" string="Deskripsi" filter_domain="['|',('code','ilike',self),('name','ilike',self)]"/>
                    <separator/>
                    <filter name="active" string="Active" domain="[('active','=',True)]"/>
                    <filter name="inactive" string="Inactive" domain="[('active','=',False)]"/>
                    <group expand="0" string="Group By">
                        <filter string="Company" domain="[]" context="{'group_by':'company_id'}"/>
                    </group>
                </search>
            </field>
        </record>
		
		<record id="action_mill_storage_view" model="ir.actions.act_window">
            <field name="name">Storage</field>
            <field name="res_model">mill.storage</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_mill_storage_filter"/>
            <field name="help" type="html">
              <p class="oe_view_nocontent_create">
                Klik untuk menambahkan Master Storage.
              </p>
            </field>
        </record>
		
		<menuitem id="menu_master_mill_storage" 
				  action="action_mill_storage_view" 
				  parent="c10i_palm_oil_mill.master_mills_menu" 
				  sequence="30"/>
	</data>
</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--wizard link manual do-->
        <record model="ir.ui.view" id="so_manual_link_do_form">
            <field name="name">sale.do.manual.link.invoice.form</field>
            <field name="model">sale.do.manual.link.invoice</field>
            <field name="arch" type="xml">
                <form string="Manual Link">
                    <header>
                        <button name="action_assign_picking" string="Confirm" type="object" class="btn-primary"/>
                        <button name="reset_form" string="Reset Entry" type="object" />
                    </header>
                    <group>
                        <group>
                            <field name="invoice_id" required="True"/>
                        </group>
                        <group>
                            <field name="sale_id" invisible="1"/>
                        </group>
                    </group>
                    <field name="invoice_ids" invisible="1"/>
                    <field name="picking_ids" invisible="1"/>
                    <field name="selected_picking_ids" domain="[('state','=','done'),('id','in',picking_ids[0][2])]"/>
                    <!-- <footer>
                        <button string="Cancel" class="btn-default" special="cancel"/>
                    </footer> -->
                </form>
            </field>
        </record>
        
        <record id="action_sale_manual_link_do" model="ir.actions.act_window">
             <field name="name">Manual Link DO to Invoice</field>
             <field name="res_model">sale.do.manual.link.invoice</field>
             <field name="type">ir.actions.act_window</field>
             <field name="view_type">form</field>
             <field name="view_mode">tree,form</field>
             <field name="view_id" ref="so_manual_link_do_form"/>
             <field name="target">current</field>
       </record>

        <!-- PROFORMA INVIOCE -->
        <record id="sale_proforma_invoice_form" model="ir.ui.view">
            <field name="name">sale.proforma.invoice.form</field>
            <field name="model">sale.proforma.invoice</field>
            <field name="arch" type="xml">
                <form string="Invoice">
                <header>
                    <button name="invoice_print" string="Print" type="object" icon="fa-print"/>
                    <field name="state" widget="statusbar" nolabel="1" statusbar_visible="draft"/>
                </header>
                <sheet string="Invoice">
                    <h1 class="mt0">
                        <label string="Pro-Invoice" />
                        <field name="name" readonly="0" class="oe_inline" />
                    </h1>
                    <group>
                        <group>
                            <field string="Customer" name="partner_id"
                                context="{'search_default_customer':1, 'show_address': 1}"
                                options='{"always_reload": True}'
                                domain="[('customer', '=', True)]"/>
                            <field name="sale_id" />
                        </group>
                        <group>
                            <field name="date_invoice"/>
                            <label for="currency_id" groups="base.group_multi_currency"/>
                            <div groups="base.group_multi_currency">
                                <field name="currency_id" options="{'no_create': True, 'no_open': True}" class="oe_inline"/>
                            </div>
                        </group>
                    </group>
                    <notebook>
                        <page string="Invoice Lines">
                            <field name="invoice_line_ids" nolabel="1" >
                                <tree string="Invoice Lines" editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="product_id"/>
                                    <field name="name"/>
                                    <field name="product_uom" />
                                    <field name="product_uom_qty"/>
                                    <field name="price_unit"/>
                                    <field name="tax_id" widget="many2many_tags" 
                                        domain="[('type_tax_use','=','sale'),('company_id', '=', parent.company_id)]" options="{'no_create': True}"/>
                                    <field name="price_subtotal"/>
                                </tree>
                            </field>
                            <group class="oe_subtotal_footer oe_right">
                                <field name="amount_untaxed"/>
                                <field name="amount_tax"/>
                                <field name="amount_total" class="oe_subtotal_footer_separator"/>
                            </group>
                            <field name="note" placeholder="Terms and conditions..."/>
                        </page>
						<page string="Other Info">
                            <group>
                                <group>
                                    <field name="partner_bank_id"/>
                                </group>
                                <group>
                                    <field name="sign_seller"/>
									<field name="sign_job_position" attrs="{'required': [('sign_seller', '!=', False)]}"/>
								</group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <!--<div class="oe_chatter">-->
                    <!--<field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>-->
                    <!--<field name="message_ids" widget="mail_thread"/>-->
                <!--</div>-->
                </form>
            </field>
        </record>

        <record id="sale_proforma_invoice_tree" model="ir.ui.view">
            <field name="name">sale.proforma.invoice.tree</field>
            <field name="model">sale.proforma.invoice</field>
            <field name="arch" type="xml">
                <tree string="Invoice">
                    <field name="partner_id" groups="base.group_user" string="Customer"/>
                    <field name="date_invoice"/>
                    <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}"/>
                    <field name="currency_id" invisible="1"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="sale_proforma_invoice_filter" model="ir.ui.view">
            <field name="name">sale.proforma.invoice.select</field>
            <field name="model">sale.proforma.invoice</field>
            <field name="arch" type="xml">
                <search string="Search Invoice">
                    <field name="name" string="Invoice" filter_domain="[,'|', ('name','ilike',self),('partner_id', 'like', self)]"/>
                    <separator/>
                    <field name="partner_id" operator="child_of"/>
                    <group expand="0" string="Group By">
                        <filter name="group_by_partner_id" string="Partner" context="{'group_by':'partner_id'}"/>
                        <separator/>
                        <filter string="Invoice Date" context="{'group_by':'date_invoice'}"/>
                    </group>
               </search>
            </field>
        </record>

        <record id="action_sale_proforma_invoice" model="ir.actions.act_window">
            <field name="name">Pro-Forma Invoices</field>
            <field name="res_model">sale.proforma.invoice</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="sale_proforma_invoice_form"/>
            <field name="search_view_id" ref="sale_proforma_invoice_filter"/>
        </record>

        <!-- PACKING LIST -->
        <record id="sale_packing_list_form" model="ir.ui.view">
            <field name="name">sale.packing.list.form</field>
            <field name="model">sale.packing.list</field>
            <field name="arch" type="xml">
                <form string="Packing List">
                <header>
                    <button name="packing_print" string="Print" type="object" icon="fa-print"/>
                    <field name="state" widget="statusbar" nolabel="1" statusbar_visible="draft"/>
                </header>
                <sheet string="Packing List">
                    <h1 class="mt0">
                        <field name="name" readonly="0" class="oe_inline"/>
                    </h1>
                    <group>
                        <group>
                            <field string="Customer" name="partner_id"
                                context="{'search_default_customer':1, 'show_address': 1}"
                                options='{"always_reload": True}'
                                domain="[('customer', '=', True)]"/>
                            <field name="sale_id" />
                        </group>
                        <group>
                            <field name="date"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Packing List Lines">
                            <field name="packing_list_line_ids" nolabel="1" >
                                <tree string="Packing List Line Lines" editable="bottom">
                                    <field name="sequence" widget="handle"/>
                                    <field name="product_id"/>
                                    <field name="name"/>
                                    <field name="product_uom" />
                                    <field name="product_uom_qty"/>
                                    <field name="subtotal_weight"/>
                                </tree>
                            </field>
                            <group class="oe_subtotal_footer oe_right">
                                <field name="total_weight" readonly="1" class="oe_subtotal_footer_separator"/>
                            </group>
                            <field name="note" placeholder="Terms and conditions..."/>
                        </page>
                        <page string="Other Info">
                            <group>
                                <group>
                                    <field name="sign_seller"/>
                                    <field name="sign_job_position" attrs="{'required': [('sign_seller', '!=', False)]}"/>
                                </group>
                                <group>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
                <!--<div class="oe_chatter">-->
                    <!--<field name="message_follower_ids" widget="mail_followers" groups="base.group_user"/>-->
                    <!--<field name="message_ids" widget="mail_thread"/>-->
                <!--</div>-->
                </form>
            </field>
        </record>

        <record id="sale_packing_list_tree" model="ir.ui.view">
            <field name="name">sale.packing.list.tree</field>
            <field name="model">sale.packing.list</field>
            <field name="arch" type="xml">
                <tree string="Packing List">
                    <field name="partner_id" groups="base.group_user" string="Customer"/>
                    <field name="date"/>
                    <field name="total_weight"/>
                    <field name="company_id" groups="base.group_multi_company" options="{'no_create': True}"/>
                    <field name="state"/>
                </tree>
            </field>
        </record>

        <record id="sale_packing_list_filter" model="ir.ui.view">
            <field name="name">sale.packing.list.select</field>
            <field name="model">sale.packing.list</field>
            <field name="arch" type="xml">
                <search string="Search Packing">
                    <field name="name" string="Packing List" filter_domain="[,'|', ('name','ilike',self),('partner_id', 'like', self)]"/>
                    <separator/>
                    <field name="partner_id" operator="child_of"/>
                    <group expand="0" string="Group By">
                        <filter name="group_by_partner_id" string="Partner" context="{'group_by':'partner_id'}"/>
                        <separator/>
                        <filter string="Date" context="{'group_by':'date'}"/>
                    </group>
               </search>
            </field>
        </record>

        <record id="action_sale_packing_list" model="ir.actions.act_window">
            <field name="name">Packing List</field>
            <field name="res_model">sale.packing.list</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="sale_packing_list_form"/>
            <field name="search_view_id" ref="sale_packing_list_filter"/>
        </record>

        <!-- Sale Order -->
        <record id="sjm_sale_order_form_view" model="ir.ui.view">
            <field name="name">sjm.sale.order.form.view</field>
            <field name="model">sale.order</field>
            <field name="priority">17</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <button name="action_view_invoice" position="after">
                    <button name="%(action_sale_manual_link_do)d" string="Link Manual DO" type="action" class="oe_stat_button oe_edit_only" icon="fa-pencil-square-o" attrs="{'invisible': [('invoice_count', '=', 0)]}"/>
                    <button type="object"  name="action_view_proforma_invoice"
                        class="oe_stat_button"
                        icon="fa-pencil-square-o" attrs="{'invisible':[('state', 'in', ('draft','sent'))]}">
                        <field name="proforma_invoice_count" widget="statinfo" string="Pro-Forma Invoice"/>
                    </button>
                    <button type="object"  name="action_view_packing_list"
                        class="oe_stat_button"
                        icon="fa-pencil-square-o" attrs="{'invisible':[('state', 'in', ('draft','sent'))]}">
                        <field name="packing_list_count" widget="statinfo" string="Packing List"/>
                    </button>
                </button>
                <!--<field name="warehouse_id" position="replace"/>-->
                <field name="doc_type_id" position="after">
                    <field name="draft_packing_list_ids" invisible="1"/>
                </field>
                <xpath expr="//group[@name='sale_shipping']" position="replace"/>
                <xpath expr="//form/sheet/notebook/page[1]" position="after">
                    <page name="ship_payment" string="Contract Information">
                        <group>
                            <group string="Shipping Information" name="sale_shipping">
                                <field name="warehouse_id" invisible="1"/>
                                <field name="picking_policy" required="True"/>
                                <field name="delivery_of_goods"/>
                                <field name="source_warehouse_note" />
                                <field name="picking_location_note" />
                                <field name="other_claim"/>
                            </group>
                            <group string="Kualitas" name="sale_quality_sjim">
                                <field name="quantity_note"/>
                                <label for="quality_ffa"/>
                                <div class="o_row">
                                    <field name="quality_ffa"/>
                                    <label string="%"/>
                                </div>
                                <label for="quality_mni"/>
                                <div class="o_row">
                                    <field name="quality_mni"/>
                                    <label string="%"/>
                                </div>
                                <label for="quality_iv"/>
                                <div class="o_row">
                                    <field name="quality_iv"/>
                                    <label string="%"/>
                                </div>
                                <field name="quality_claim"/>
                                <field name="quality_note"/>
                            </group>
                            <group string="Payment Information" name="sale_payment_sjim">
                                <field name="price_statement_rule"/>
                                <field name="partner_bank_id"/>
                                <field name="payment_term_note"/>
                                <field name="ppn_include"/>
                            </group>
                            <group string="Payment Information" name="sale_reporting_sjim">
                                <field name="sign_city"/>
                                <field name="sign_seller"/>
                                <field name="sign_seller_position"/>
                                <field name="sign_buyer"/>
                                <field name="sign_buyer_position"/>
                            </group>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>

        <menuitem action="sale.action_orders" name="Contract"
            id="sale.menu_sale_order" parent="sales_team.menu_sales"
            sequence="12" groups="sales_team.group_sale_salesman,sales_team.group_sale_manager"/>

        <!-- ========== Spesifikasi Report ========== -->
        <report string	= "Report Contract Sale"
				model	= "sale.order"
				auto	= "True"
				name	= "report_contract_sale"
				rml		= "sjm_sale/reports/report_contract_sale.jrxml"
				id		= "report_contract_sale"
                menu    = "False"
        />

        <report string	= "Form Sales Contract XLSX"
				model	= "sale.order"
				auto	= "True"
				name	= "report_contract_sale_xlsx"
				rml		= "sjm_sale/reports/report_contract_sale.jrxml"
				id		= "report_contract_sale_xlsx"
                menu    = "False"
                report_type = "xlsx"
        />

        <report string  = "Form Sales Contract XLSX"
                model   = "sale.order"
                auto    = "True"
                name    = "report_contract_sale_xlsx_new"
                id      = "report_contract_sale_xlsx_new"
                menu    = "True"
                report_type = "xlsx"
        />
    </data>
</odoo>
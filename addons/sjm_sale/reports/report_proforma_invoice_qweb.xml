</template>

<template id="report_proforma_invoice_qweb">
    <t t-call="report.html_container">
        <t t-foreach="docs" t-as="o">
            <t t-call="sjm_sale.report_proforma_invoice_document" t-lang="o.partner_id.lang"/>
        </t>
    </t>
</template>
</odoo>

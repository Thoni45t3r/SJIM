<?xml version="1.0" encoding="utf-8"?>
<odoo>
<template id="report_proforma_invoice_document">
    <t t-set="o" t-value="o.with_context({'lang':o.partner_id.lang})"/>
    <t t-set="company" t-value="o.company_id"/>
    <div class="header col-xs-12">
        <center style="font-size:20pt;"><span t-field="o.company_id"/></center>
        <i>
            <center><span t-field="company.street"/>,&#160;<span t-field="company.street2"/></center>
            <center><span t-field="company.city"/>&#160;-&#160;<span t-field="company.state_id"/></center>
        </i>
        <div class="row zero_min_height">
            <div class="col-xs-12">
                <div style="border-bottom: 1px solid black;"></div>
            </div>
        </div>
    </div>
    <div class="page">
        <div class="oe_structure"/>
        <div class="col-xs-6">
            <strong>Kepada:</strong>
            <div t-if="o.partner_id">
                <div t-field="o.partner_id"
                    t-options='{"widget": "contact", "fields": ["address", "name", "phone", "fax"], "no_marker": True, "phone_icons": True}'/>
            </div>
        </div>
        <div class="col-xs-12">
            <center style="font-size:20pt;"><u>INVOICE</u></center>        
            <center><span t-field="o.name"/></center>        
        </div>
        <div class="col-xs-6">
            <h5>Kontrak No. :<span t-field="o.name"/></h5>
        </div>
        <table class="table">
            <thead>
                <tr>
                    <th style="text-center; border:1px solid black;">JENIS BARANG</th>
                    <th style="text-center; border:1px solid black;">JUMLAH BARANG</th>
                    <th style="text-center; border:1px solid black;">HARGA SATUAN</th>
                    <th style="text-center; border:1px solid black;">JUMLAH HARGA</th>
                </tr>
            </thead>
            <tbody>
                <t t-foreach="o.invoice_line_ids" t-as="l">
                    <tr>
                        <td style="border:1px solid black;"><span t-field="l.product_id"/></td>
                        <td style="text-right; border:1px solid black;"><span t-field="l.product_uom_qty"/></td>
                        <td style="text-right; border:1px solid black;"><span t-field="l.price_unit"/></td>
                        <td style="text-right; border:1px solid black;"><span t-field="l.price_subtotal"/></td>
                    </tr>
                </t>
                <t t-if="o.amount_tax">
                    <tr>
                        <th style="border:1px solid black;" colspan="3"><i>Total Tanpa Pajak</i></th>
                        <th style="text-right; border:1px solid black;"><i><span t-field="o.amount_untaxed"/></i></th>
                    </tr>      
                    <tr>
                        <th style="border:1px solid black;" colspan="3"><i>Pajak</i></th>
                        <th style="text-right; border:1px solid black;"><i><span t-field="o.amount_tax"/></i></th>
                    </tr>      
                    <tr>
                        <th style="border:1px solid black;" colspan="3"><i>Total Tagihan</i></th>
                        <th style="text-right; border:1px solid black;"><i><span t-field="o.amount_total"/></i></th>
                    </tr>      
                </t>
                <t t-else="">
                    <tr>
                        <th style="border:1px solid black;" colspan="3"><i>Total Tagihan</i></th>
                        <th style="text-right; border:1px solid black;"><i><span t-field="o.amount_total"/></i></th>
                    </tr>
                </t>
            </tbody>
        </table>
        <div class="col-xs-12">
            <h4>TERBILANG :</h4>
            <h4><span t-esc="o.get_amount_total()"/></h4>
        </div>
        <div class="col-xs-6">
            <t t-set="bank" t-value="o.partner_bank_id"/>
            <h5>Mohon tagihan dapat ditransfer ke rekenig sebagai berikut:</h5>
            <h5><span t-field="bank.bank_id"/></h5>
            <h5>A.N&#160;<span t-field="bank.partner_id"/></h5>
            <h5>AC.&#160;No.&#160;<span t-field="bank.acc_number"/></h5>
        </div>
        <div class="col-xs-12">
            <div class="col-xs-6"/>
            <div class="col-xs-6">
                <h5><center><span t-field="company.city"/>,&#160;<span t-esc="datetime.datetime.strptime(o.date_invoice, '%Y-%m-%d').strftime('%d %b %Y')"/></center></h5>
                <br/>
                <br/>
                <br/>
                <br/>
                <h5>
                    <t t-if="o.sign_seller">
                        <center><span t-field="o.sign_seller"/></center>
                        <center><i><span t-field="o.sign_job_position"/></i></center>
                    </t>
                </h5>
            </div>
        </div>

    </div>

<odoo>
    <data>
      
        <report string="Rekap Penjualan Per Customer"
            model="generate.report.sale.order"
            auto="True"
            report_type="xlsx"
            name="report_generate_penjualan_customer_xls"
            id="report_generate_penjualan_customer_xls"
            menu="False"
            />

        <report string="Detail Penjualan Product"
            model="generate.report.sale.order"
            auto="True"
            report_type="xlsx"
            name="report_generate_detail_penjualan_barang_xls"
            id="report_generate_detail_penjualan_barang_xls"
            menu="False"
            />

        <record id="paperformat_proforma_invoice" model="report.paperformat">
            <field name="name">A4 Proforma Invoice</field>
            <field name="default" eval="True"/>
            <field name="format">A4</field>
            <field name="page_height">0</field>
            <field name="page_width">0</field>
            <field name="orientation">Portrait</field>
            <field name="margin_top">25</field>
            <field name="margin_bottom">20</field>
            <field name="margin_left">7</field>
            <field name="margin_right">7</field>
            <field name="header_line" eval="False"/>
            <field name="header_spacing">20</field>
            <field name="dpi">90</field>
        </record>

        <report 
            id="report_proforma_invoice"
            string="Proforma Invoice Report"
            model="sale.proforma.invoice" 
            report_type="qweb-pdf"
            file="sjm_sale.report_proforma_invoice_qweb" 
            name="sjm_sale.report_proforma_invoice_qweb"
            paperformat="sjm_sale.paperformat_proforma_invoice"
        />

        <report 
            id="report_packing_list"
            string="Packing List Report"
            model="sale.packing.list" 
            report_type="qweb-pdf"
            file="sjm_sale.report_packing_list_qweb" 
            name="sjm_sale.report_packing_list_qweb"
            paperformat="sjm_sale.paperformat_proforma_invoice"
        />
	</data>
</odoo>
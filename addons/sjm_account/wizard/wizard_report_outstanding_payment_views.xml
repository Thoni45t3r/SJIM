<?xml version="1.0"?>
<odoo>
    <data>
        <record id='wizard_report_outstanding_payment' model="ir.ui.view">
            <field name="name">Report Outstanding Payment</field>
            <field name="model">wizard.report.outstanding.payment</field>
         	<field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Report Outstanding Payment">
                    <group>
                        <group>
                            <field name="date_start" required='1'/>
                            <field name="date_stop" required='1'/>
							<field name="state" required='1'/>
                        </group>
                        <group>
                            <field name="report_type"  />
                            <field name="company_id" widget="selection"/>
                        </group>
                    </group>
                    <footer>
                        <button icon="fa-print" name="create_report" string="Print" type="object" colspan="2" default_focus="1" />
                        or
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>
        
        <record model="ir.actions.act_window" id="action_report_outstanding_payment">
            <field name="name">Report Outstanding Payment</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">wizard.report.outstanding.payment</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="wizard_report_outstanding_payment"/>
            <field name="target">new</field>
        </record>

        <menuitem name="Rekap Outstanding Payment" parent="account.menu_finance_reports" action="action_report_outstanding_payment" id="menu_report_outstanding_payment" icon="fa-print" sequence="300"/>
    </data>
</odoo>
<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data> 
    
    	<record id="stock_transport_location_tree_view" model="ir.ui.view">
            <field name="name">stock.transport.location.tree.view</field>
            <field name="model">stock.transport.location</field>
            <field name="arch" type="xml">
                <tree string="Master Location">
	                <field name="name"/>
                </tree>
            </field>
        </record>	

        <record model="ir.ui.view" id="stock_transport_location_form_view">
		    <field name="name">stock.transport.location.form</field>
		    <field name="model">stock.transport.location</field>
		    <field name="arch" type="xml">
		        <form string="Master Location">
		            <group>
						<field name="name"/>
					</group>        
				</form>
			</field>
		</record>

		<record id="stock_transport_rate_tree_view" model="ir.ui.view">
            <field name="name">stock.transport.rate.tree.view</field>
            <field name="model">stock.transport.rate</field>
            <field name="arch" type="xml">
                <tree string="Master Data Rate">
	                <field name="partner_id"/>
	                <field name="start_date"/>
	                <field name="end_date"/>
	                <field name="src_location_id"/>
	                <field name="dest_location_id"/>
	                <field name="rate_type"/>
	                <field name="product_id"/>
	                <field name="rate"/>
                </tree>
            </field>
        </record>

        <record id="view_stock_transport_rate_search" model="ir.ui.view">
            <field name="name">stock.transport.rate.search</field>
            <field name="model">stock.transport.rate</field>
            <field name="arch" type="xml">
                <search string="Search Data Rate">
                    <field name="partner_id"/>
	                <field name="start_date"/>
	                <field name="end_date"/>
	                <field name="src_location_id"/>
	                <field name="dest_location_id"/>
	                <field name="rate_type"/>
	                <field name="product_id"/>
                </search>
            </field>
        </record>


		<record model="ir.ui.view" id="stock_transport_location_form_view">
		    <field name="name">stock.transport.rate.form</field>
		    <field name="model">stock.transport.rate</field>
		    <field name="arch" type="xml">
		        <form string="Master Data Rate">
		             <group col="4">
						<field name="partner_id" options="{'no_open': True, 'no_create': True}"/>
		                <field name="start_date"/>
		                <field name="end_date"/>
		                <field name="src_location_id" options="{'no_open': True, 'no_create': True}"/>
		                <field name="dest_location_id" options="{'no_open': True, 'no_create': True}"/>
		                <field name="rate_type"/>
		                <field name="product_id"/>
		                <field name="rate"/>
		            </group>
		        </form>
		    </field>
		</record> 

		<record model="ir.actions.act_window" id="action_stock_transport_location">
		    <field name="name">Master Location</field>
		    <field name="res_model">stock.transport.location</field>
		    <field name="view_type">form</field>
		    <field name="view_mode">tree,form</field>
		</record>

		<record model="ir.actions.act_window" id="action_stock_transport_rate">
		    <field name="name">Master Data Rate</field>
		    <field name="res_model">stock.transport.rate</field>
		    <field name="view_type">form</field>
		    <field name="view_mode">tree,form</field>
		</record>
		
		<menuitem id="menu_stock_transport_cost_config" name="Master Data" parent="menu_stock_transport_cost" sequence="1000" groups="group_stock_transport_approver"/>
		
		<menuitem id="master_stock_transport_location_menu" name="Transport Location" parent="menu_stock_transport_cost_config" action="action_stock_transport_location"/>

		<menuitem id="master_stock_transport_rate_menu" name="Transport Rate" parent="menu_stock_transport_cost_config" action="action_stock_transport_rate"/>

	</data>
</odoo>
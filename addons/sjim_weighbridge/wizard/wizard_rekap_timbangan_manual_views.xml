<?xml version="1.0"?>
<odoo>
    <data>
        <record id='wizard_report_rekap_timbangan_manual' model="ir.ui.view">
            <field name="name">Rekap Timbangan Manual</field>
            <field name="model">wizard.rekap.timbangan.manual</field>
         	<field name="type">form</field>
            <field name="arch" type="xml">
                <form string="Rekap Timbangan Manual">
                    <group>
                        <group>
                            <field name="date_start" required='1'/>
                            <field name="date_stop" required='1'/>
                        </group>
                        <group>
                            <field name="report_type"  />
							<field name="wb_picking_type_id" options="{'no_open': True, 'no_edit': True, 'no_create': True}"/>
                            <!--<field name="company_id" widget="selection"/>-->
                        </group>
                    </group>
                    <footer>
                        <button icon="fa-print" name="create_report" string="Print" type="object" colspan="2" default_focus="1" />
                        or
                        <button string="Cancel" class="oe_link" special="cancel" />
                    </footer>
                </form>
            </field>
        </record>
        
        <record model="ir.actions.act_window" id="action_report_rekap_timbangan_manual">
            <field name="name">Rekap Timbangan Manual</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">wizard.rekap.timbangan.manual</field>
            <field name="view_type">form</field>
            <field name="view_mode">form</field>
            <field name="view_id" ref="wizard_report_rekap_timbangan_manual"/>
            <field name="target">new</field>
        </record>

        <menuitem name="Rekap Timbangan Manual" parent="menu_manual_import_weighbridge_scale" action="action_report_rekap_timbangan_manual" id="menu_report_rekap_timbangan_manual" icon="fa-print" sequence="30"/>
    </data>
</odoo>
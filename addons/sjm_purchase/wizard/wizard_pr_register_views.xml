<?xml version="1.0"?>
<odoo>
    <data>

		<record model="ir.ui.view" id="wizard_purchase_received_register_order_sjm">
			<field name="name">wizard.purchase.received.register.form.sjm</field>
			<field name="model">wizard.purchase.received.register</field>
			<field name="inherit_id" ref="c10i_purchase.wizard_report_purchase_received_register"/>
			<field name="arch" type="xml">

				<!--add document_type_ids field xpath after to_date field -->
				<xpath expr="//field[@name='date_stop']" position="after">
					<field name="document_type_ids" options="{'no_create_edit': True}" widget="many2many_tags"/>
				</xpath>

			</field>
		</record>
		
		<record model="ir.ui.view" id="wizard_pending_purchase_request_sjm">
			<field name="name">wizard.pending.purchase.request.form.sjm</field>
			<field name="model">wizard.pending.purchase.request</field>
			<field name="inherit_id" ref="c10i_purchase_request.wizard_report_pending_purchase_request"/>
			<field name="arch" type="xml">

				<!--add document_type_ids field xpath after to_date field -->
				<xpath expr="//field[@name='to_date']" position="after">
					<field name="operating_unit_ids" options="{'no_create_edit': True}" widget="many2many_tags"/>
				</xpath>

			</field>
		</record>
	</data>
</odoo>